<div>
  <h1 style="display: inline-block;">Tags</h1>
  <% if @node %>
    <a class="btn btn-default btn-xs sub" rel="popover" data-container="body" data-placement="bottom" data-template='<div class="popover" role="tooltip"><div class="arrow"></div><div class="popover-body"><%= render partial: 'tag/tags_pop', locals: {tags: @node.node_tags, label_name: 'label-info'} %></div></div>' data-html="true" data-content="sample" > <i class="fa fa-plus"> </i> Subscribe</a>
  <% else %>
    <a class="btn btn-outline-primary sub" rel="popover" data-container="body" data-placement="bottom" data-template='<div class="popover" role="tooltip"><div class="arrow"></div><div class="popover-body"><%= render partial: 'tag/tags_pop', locals: {tags: @user.user_tags, label_name: 'label-info'} %></div></div>' data-html="true" data-content="sample" > Subscribe<i class="fa fa-plus"> </i> </a>
  <% end %>
  </div>
  <em class="italics"><a href="/tags">Tags</a> organize our knowledge base. Click to learn more or subscribe to a topic.</em>

  <div style="background: #f2f2f2; padding-left: 10px;border-radius: 10px; margin-top: 10px">
    <div style="padding-top: 10px; padding-right: 10px">
      <% parent ||= nil %>
  <% if current_user && (parent != :profile || (current_user.id == @user.id || current_user.role == "admin")) %>
      <% url = url || "/tag/create/" + @node.id.to_s %>

    <form id="tagform" class="form" data-remote="true" action="<%= url %>">
      <div class="control-group">
        <input name="remote" type="hidden" value="true" />
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-tags"></i></span>
          <input autocomplete="off" class="tag-input form-control" name="name" type="text" placeholder="<%= t('tag._tagging.enter_tags') %>" data-provide="typeahead" />
          <div class="input-group-btn">
            <a class="btn btn-default blurred-location-input" rel="tooltip" title="Link with a location">
              <i class="fa fa-map-marker"></i>
            </a>
            <%= render partial: 'tag/advanced_tagging' %>
          </div>
        </div>
        <script>
          jQuery(document).ready(function() {
            <% if @node %>
              // node tags:
              initTagForm("/tag/delete/<%= @node.id %>", '#tagform');
            <% else %>
              // user tags:
              initTagForm("/profile/tags/delete/<%= @user.id %>", '#tagform');
            <% end %>
          });
        </script>
      </div>
    </form>
    <% end %>
    <%= render partial: 'tag/location' %>
  </div>
  <% if @node %>
    <%= render partial: 'tag/replication' %>
    <%= render partial: 'tag/tags', locals: { power_tag: true, label_name: 'label-default', tags: @node.node_tags } %>
    <%= render partial: 'tag/tags', locals: { power_tag: false, label_name: 'label-primary', tags: @node.node_tags } %>
    <% if current_user %>
      <!-- <a href="/subscribe/multiple/tag" class="btn btn-primary btn-sm active" role="button" aria-pressed="true" style="margin-bottom: 10px" id="subs">Subscribe >></a> -->
    <% else %>
      <!-- <a data-toggle="modal" data-target="#loginModal" class="btn btn-primary btn-sm active" role="button" aria-pressed="true" style="margin-bottom: 10px">Subscribe >></a> -->
    <% end %>
  <% else %>
    <%= render partial: 'tag/tags', locals: { power_tag: false, label_name: 'label-primary', tags: @user.user_tags } %> 
    <% if current_user %>
      <!-- <a href="/subscribe/multiple/tag" class="btn btn-primary btn-sm active" role="button" aria-pressed="true" style="margin-bottom: 10px" id="subs">Subscribe >></a> -->
    <% else %>
      <!-- <a data-toggle="modal" data-target="#loginModal" class="btn btn-primary btn-sm active" role="button" aria-pressed="true" style="margin-bottom: 10px">Subscribe >></a> -->
    <% end %>
  <% end %>
</div>
<style>
  .sub{
    border-color: #006699;
    border-width: 2px;
    border-radius: 5px;
    margin-left: 20px;
    margin-bottom: 12px;
  }

</style>
<script>
$(function () {
  $('#tags [data-toggle="tooltip"]').tooltip()
})

var pops = $("[data-toggle=popover]");
$(".label").on("click", function(e){
    if(e.target === this){
      let that = this;
      if(this.dataset.count == 0){
        setTimeout(function(){
          $(that).popover("show");
        }, 0);
        this.dataset.count = 1;
      } else {
        setTimeout(function(){
          $(that).popover("hide");
        }, 0);
        this.dataset.count = 0;
      }
    }
  });
</script>